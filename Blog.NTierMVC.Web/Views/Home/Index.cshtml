
@model ArticleListDto

    <div style="height:50px"></div>

    <section class="blog-posts">
        <div class="container">
            <div class="row">
                <div class="col-lg-8">
                    <div class="all-blog-posts">
                        <div class="row">
                            @foreach(var item in Model.Articles){
                                <div class="col-lg-12">
                                <div class="blog-post">
                                    <div class="blog-thumb">
                                        <img src="~/images/@item.Image.FileName" alt="@item.Image.FileName">
                                    </div>
                                    <div class="down-content">
                                        <a href="post-details.html">
                                            <a asp-controller="Home" asp-action="Detail" asp-route-id=@item.Id><h4>@item.Title</h4></a>
                                        <ul class="post-info">
                                            <li><a href="#">@item.User.FirstName @item.User.LastName</a></li>
                                            <li><a href="#">@item.CreatedDate.ToString("dd/MM/yyyy")</a></li>
                                            <li><a href="#"><i class="fa-solid fa-eye"></i>@item.ViewCount</a></li>
                                        </ul>
                                        <p> 
                                            @(item.Content.Length > 200 ? item.Content.Substring(0,280) : item.Content)...
                                        </p>
                                        <div class="post-options">
                                            <div class="row">
                                                <div class="col-6">
                                                    <ul class="post-tags">
                                                        <li><i class="fa fa-tags"></i></li>
                                                        <li><a href="#">@item.Category.Name</a></li>
                                                        
                                                    </ul>
                                                </div>
                                                <div class="col-6">
                                                    <ul class="post-share">
                                                        <li><i class="fa fa-link"></i></li>
                                                        <li><a asp-controller="Home" asp-action="Detail" asp-route-id=@item.Id>[Devamını Oku]</a></li>
                                                    </ul>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            }

                            <div class="col-lg-12">
@*                                 <div class="main-button">
                                    <a href="blog.html">View All Posts</a>
                                </div> *@
                            <ul class="pagination justify-content-center mb-4 mt-4 btn-block">
                                @if (Model.ShowPrevious)
                                {
                                    <li class="page-item"><a class="page-link" asp-route-currentPage="@(Model.CurrentPage - 1)" asp-route-pageSize="@Model.PageSize">Önceki</a></li>
                                }

                                @for(int i = 1; i < Model.TotalPages + 1; i++)
                                {
                                    <li class="page-item @(i == Model.CurrentPage ? "active" : "")"><a class="page-link" asp-route-currentPage="@i" asp-route-pageSize="@Model.PageSize">@i</a></li>
                                }


                                @if(Model.ShowNext)
                                {
                                    <li class="page-item"><a class="page-link" asp-route-currentPage="@(Model.CurrentPage + 1)" asp-route-pageSize="@Model.PageSize">Sonraki</a></li>
                                }
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="sidebar">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="sidebar-item search">
                                    <form id="search_form" method="GET" asp-controller="Home" asp-action="Search"> 
                                        <input type="text" name="keyword" class="searchText" placeholder="Ara..." autocomplete="on">
                                    </form>
                                </div>
                            </div>
                        @await Component.InvokeAsync("HomeRecentPost")
                            <div class="col-lg-12">
                                <div class="sidebar-item categories">
                                    <div class="sidebar-heading">
                                        <h2>Kategoriler</h2>
                                    </div>
                                @await Component.InvokeAsync("HomeCategories")
                                </div>
                            </div>
                            @* <div class="col-lg-12">
                                <div class="sidebar-item tags">
                                    <div class="sidebar-heading">
                                        <h2>Tag Clouds</h2>
                                    </div>
                                    <div class="content">
                                        <ul>
                                            <li><a href="#">Lifestyle</a></li>
                                            <li><a href="#">Creative</a></li>
                                            <li><a href="#">HTML5</a></li>
                                            <li><a href="#">Inspiration</a></li>
                                            <li><a href="#">Motivation</a></li>
                                            <li><a href="#">PSD</a></li>
                                            <li><a href="#">Responsive</a></li>
                                        </ul>
                                    </div>
                                </div>
                            </div> *@
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>


   
