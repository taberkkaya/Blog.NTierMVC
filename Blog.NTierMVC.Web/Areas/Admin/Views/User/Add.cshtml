@model UserAddDto

<div class="content-wrapper">

    <!-- Content -->

    <div class="container-xxl flex-grow-1 container-p-y">


        <h4 class="py-3 mb-4">
            <span class="text-muted fw-light">User Managemenet</span> / Add User
        </h4>

        <div class="row">
            <div class="col-md-12">
                <div class="card mb-4">
                    <form asp-controller="User" asp-action="Add" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="All" style="color:red"></div>
                        <div class="card-body">
                            <div class="form-group">
                                <label asp-for="FirstName" class="form-label">First Name</label>
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                                <input asp-for="FirstName" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="" aria-describedby="defaultFormControlHelp">
                            </div>
                            <div class="form-group">
                                <label asp-for="LastName" class="form-label">Last Name</label>
                                <span asp-validation-for="LastName" class="text-danger"></span>
                                <input asp-for="LastName" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="" aria-describedby="defaultFormControlHelp">
                            </div>
                            <div class="form-group">
                                <label asp-for="Email" class="form-label">Email</label>
                                <span asp-validation-for="Email" class="text-danger"></span>
                                <input asp-for="Email" type="email" class="form-control mb-3" id="defaultFormControlInput" placeholder="" aria-describedby="defaultFormControlHelp">
                            </div>
                            <div class="form-group">
                                <label asp-for="PhoneNumber" class="form-label">Phone Number</label>
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                <input asp-for="PhoneNumber" type="tel" class="form-control mb-3" id="defaultFormControlInput" placeholder="" aria-describedby="defaultFormControlHelp">
                            </div>
                            <div class="form-group">
                                <label asp-for="RoleId" class="form-label">Role</label>
                                <span asp-validation-for="RoleId" class="text-danger"></span>
                                <select id="categoryList" class="form-control mb-3" asp-for="RoleId" asp-items="@(new SelectList(Model.Roles,"Id","Name"))"></select>
                            </div>
                            <div class="form-group">
                                <label asp-for="Password" class="form-label">Password</label>
                                <span asp-validation-for="Password" class="text-danger"></span>
                                <input asp-for="Password" type="password" class="form-control mb-3" id="defaultFormControlInput" placeholder="" aria-describedby="defaultFormControlHelp">
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary btn-block">Save</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

        </div>

    </div>
</div>