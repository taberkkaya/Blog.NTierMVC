@model List<SocialMedia>

<div class="content-wrapper">

    <!-- Content -->

    <div class="container-xxl flex-grow-1 container-p-y">

        <h4 class="py-3 mb-4">
            <span class="text-muted fw-light">Social Media Management /</span> Social Media
        </h4>

        <!-- Basic Bootstrap Table -->
        <div class="card">
            <div class="table-responsive text-nowrap m-5">

                <a class="btn btn-success mb-3" asp-area="Admin" asp-controller="SocialMedia" asp-action="Add">
                    Add Social Media <i class="bx bx-plus"></i>
                </a>

                <table class="table table-bordered" id="categoriesTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Url</th>
                            <th>Created Date</th>
                            <th>Created By</th>
                            <th>State</th>
                            <th>Operations</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Name</th>
                            <th>Url</th>
                            <th>Created Date</th>
                            <th>Created By</th>
                            <th>State</th>
                            <th>Operations</th>
                        </tr>
                    </tfoot>
                    <tbody class="table-border-bottom-0">
                        @foreach (var socialMedia in Model)
                        {
                            <tr name="@socialMedia.Id">
                                <td>@socialMedia.Name</td>
                                <td>@socialMedia.Url</td>
                                <td>@socialMedia.CreatedDate</td>
                                <td>@socialMedia.CreatedBy</td>
                                <td>@(socialMedia.IsDeleted ? "Deactive" : "Active")</td>
                                <td>
                                    <a class="btn btn-primary btn-sm" data-id="@socialMedia.Id" asp-area="Admin" asp-controller="SocialMedia" asp-action="Update" asp-route-socialMediaId="@socialMedia.Id"><i class="bx bxs-edit"></i></a>
                                    <a class="btn btn-danger btn-sm" data-id="@socialMedia.Id" asp-area="Admin" asp-controller="SocialMedia" asp-action="Delete" asp-route-socialMediaId="@socialMedia.Id"><i class="bx bxs-minus-circle"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <!--/ Basic Bootstrap Table -->

    </div>

    <div class="content-backdrop fade"></div>
</div>

@section Scripts {
    <script src="~/js/categoryIndex.js" type="application/ecmascript"></script>
}